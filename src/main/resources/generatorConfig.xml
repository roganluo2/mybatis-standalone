<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC " -//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <classPathEntry
            location="/Users/召君王/.m2/repository/mysql/mysql-connector-java/8.0.16/mysql-connector-java-8.0.16.jar"/>
    <properties resource="application.properties"/>
    <context id="my" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressDate" value="false"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        　　　　 <!-- mysql数据库连接 -->　
        <jdbcConnection driverClass="${mysql.driver}"
                        connectionURL="${mysql.url}" userId="${mysql.username}"
                        password="${mysql.password}"/>

        　　　　　<!-- 生成model实体类文件位置 -->
        <javaModelGenerator targetPackage="com.gperedu.mybatis.entity"
                            targetProject="E:/JavaCode/gupaoedu/mybatis-standalone/src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        　　　　　<!-- 生成mapper.xml配置文件位置 -->
        <sqlMapGenerator targetPackage="com.gperedu.mybatis.mapper.xml"
                         targetProject="E:/JavaCode/gupaoedu/mybatis-standalone/src/main/java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 生成mapper接口文件位置 -->
        <javaClientGenerator targetPackage="com.gperedu.mybatis.mapper"
                             targetProject="E:/JavaCode/gupaoedu/mybatis-standalone/src/main/java" type="XMLMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>
        　　　　 <!-- 需要生成的实体类对应的表名，多个实体类复制多份该配置即可 -->
        <table tableName="blog" domainObjectName="Blog"
               enableCountByExample="false" enableUpdateByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false"
               selectByExampleQueryId="false">
        </table>

    </context>
</generatorConfiguration>